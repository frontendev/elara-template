              tr
                td Tarjetas de crédito
                td No cancelable
                td
                  span.reg-price $1891.02
                td
                  select.form-control
                    option(selected) 0
                    option 1
                    option 2    
              tr
                td Tarifa standard
                td.cancel
                  span(data-toggle='tooltip' data-placement='bottom' title='Podes cancelar la reserva hasta 24hs antes del Check In') 
                    i.fa.fa-info-circle
                    | &nbsp; Cancelación gratuita
                td
                  span.old-price $2012.19 &nbsp;
